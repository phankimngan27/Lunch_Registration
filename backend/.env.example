# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration - Option 1: Individual settings (Local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lunch_registration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Configuration - Option 2: Connection URL (Neon/Railway)
# Uncomment and use this for Neon.tech or Railway
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Neon.tech example:
# DATABASE_URL=postgresql://neondb_owner:abc123@ep-cool-name.ap-southeast-1.aws.neon.tech/neondb?sslmode=require

# Railway example:
# DATABASE_URL=postgresql://postgres:password@postgres.railway.internal:5432/railway

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRE=7d

# Application Settings
LUNCH_PRICE=25000
DEFAULT_PASSWORD=1234

# CORS (optional - defaults to http://localhost:3000)
# CORS_ORIGIN=http://localhost:3000
